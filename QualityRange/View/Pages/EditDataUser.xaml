<Page x:Class="QualityRange.View.Pages.EditDataUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:QualityRange.ViewModel.PagesVM"
      mc:Ignorable="d" TextBlock.Foreground="#99FFFFFF"
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="Root" Background="#20242E">
    <Page.DataContext>
        <vm:EditDataUserVM/>
    </Page.DataContext>
    
    <Grid DataContext="{Binding EditingClient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Source="{Binding ProfilePhoto}">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.ProfilePhoto}" Value="{x:Null}">
                            <Setter Property="Source" Value="..\..\Resourses\Image\EmptyUserPhoto.png"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
            <Image.InputBindings>
                <MouseBinding Gesture="LeftClick"
                              Command="{Binding DataContext.ChangeImage, ElementName=Root}"/>
            </Image.InputBindings>
        </Image>

        <StackPanel Grid.Column="1">
            <Grid Margin="10">
                <TextBlock Text="Имя:"
                           VerticalAlignment="Center"/>
                <TextBox Text="{Binding Name}"
                         Style="{StaticResource TextBox}"
                         Margin="100 0 0 0"
                         MaxLength="50"/>
            </Grid>

            <Grid Margin="10">
                <TextBlock Text="Фамилия:"
                           VerticalAlignment="Center"/>
                <TextBox Text="{Binding Surname}"
                         Style="{StaticResource TextBox}"
                         Margin="100 0 0 0"
                         MaxLength="50"/>
            </Grid>

            <Grid Margin="10">
                <TextBlock Text="Отчество:"
                           VerticalAlignment="Center"/>
                <TextBox Text="{Binding Patronomic}"
                         Style="{StaticResource TextBox}"
                         Margin="100 0 0 0"
                         MaxLength="50"/>
            </Grid>

            <Grid Margin="10">
                <TextBlock Text="Номер карты:"
                           VerticalAlignment="Center"/>
                <TextBox Text="{Binding NumberOfCreditCard}"
                         Style="{StaticResource TextBox}"
                         Margin="100 0 0 0"
                         MaxLength="16"/>
            </Grid>
        </StackPanel>

        <Border Grid.Row="1" Grid.ColumnSpan="2"
                Padding="0 50">
            <Grid>
                <Grid Margin="10" 
                      VerticalAlignment="Top">
                    <TextBlock Text="Логин:"
                           VerticalAlignment="Center"/>
                    <TextBox Text="{Binding User.Login}"
                         Style="{StaticResource TextBox}"
                         Margin="100 0 0 0"
                             MaxLength="50"/>
                </Grid>
                <Grid Margin="10"
                      VerticalAlignment="Bottom">
                    <TextBlock Text="Пароль:"
                           VerticalAlignment="Center"/>
                    <TextBox Text="{Binding User.Password}"
                         Style="{StaticResource TextBox}"
                         Margin="100 0 0 0"
                             MaxLength="50"/>
                </Grid>
            </Grid>
        </Border>
        <Border CornerRadius="15"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Padding="15 10"
                Margin="10"
                Background="#1D1E27">
            <TextBlock Text="Подтвердить"
                       FontSize="12"/>
            <Border.InputBindings>
                <MouseBinding Gesture="LeftClick"
                              Command="{Binding DataContext.SaveChanges, ElementName=Root}"/>
            </Border.InputBindings>
        </Border>
    </Grid>
</Page>
